{
  "model": "sonnet",
  "permissions": {
    "allow": ["*"],
    "deny": ["Write(.env)", "Write(.env.local)", "Write(prod.*)"]
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "600000",
    "BASH_MAX_TIMEOUT_MS": "1800000"
  },
  "enableAllProjectMcpServers": true,
  "performance": {
    "parallelTasks": true,
    "cacheResults": true,
    "batchOperations": true,
    "preferBuiltinTools": true
  },
  "defaults": {
    "timeout": 300000,
    "retryOnError": true
  },
  "tools": {
    "disableDangerousBash": ["rm -rf /", "sudo rm -rf"]
  }
}