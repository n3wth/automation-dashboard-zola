{
  "pre-commit": "npm run lint && npm run type-check",
  "pre-edit": "echo '[$(date)] Editing file: $CLAUDE_FILE' >> .claude-metrics/edits.log",
  "post-command": "echo '[$(date)] Completed: $CLAUDE_COMMAND' >> .claude-metrics/commands.log",
  "pre-test": "echo 'Running tests...'",
  "post-test": "echo 'Tests completed with status: $CLAUDE_EXIT_CODE'"
}