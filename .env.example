
# Production Environment Variables Example
# Copy this to .env.local for development or .env.production for production

# Core Application
NODE_ENV=production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE=your-supabase-service-role-key

# Security Keys (Required)
# Generate CSRF_SECRET: openssl rand -hex 16
# Generate ENCRYPTION_KEY: openssl rand -base64 32
CSRF_SECRET=your-32-character-random-string
ENCRYPTION_KEY=your-base64-encoded-32-bytes

# AI API Keys
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-key
MISTRAL_API_KEY=your-mistral-key
OPENROUTER_API_KEY=sk-or-your-openrouter-key
XAI_API_KEY=your-xai-key

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Analytics & Monitoring
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Additional APIs
EXA_API_KEY=your-exa-api-key

# Production URLs
NEXT_PUBLIC_APP_URL=https://your-app-domain.com
NEXTAUTH_URL=https://your-app-domain.com

# Rate Limiting (Optional)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# Development Mode
NEXT_PUBLIC_DEV_AUTH=false
